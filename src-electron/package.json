{
    "name": "task-manager-desktop",
    "version": "1.0.0",
    "description": "Task Manager Desktop Application",
    "main": "dist/main.js",
    "author": "Your Name",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development concurrently -n \"server,client,electron\" -c \"green,blue,magenta\" \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:electron\"",
        "dev:server": "cd ../backend && npm run start:dev",
        "dev:client": "wait-on -l http://localhost:3001/tasks && cd ../app && npm run dev",
        "dev:electron": "wait-on -l http://localhost:3000 && electron .",
        "dev:electron-only": "npm run build:ts && cross-env NODE_ENV=development electron .",
        "build": "npm run build:ts && npm run build:client",
        "build:ts": "tsc",
        "build:client": "cd ../app && npm run build",
        "start": "electron .",
        "package": "npm run build && electron-builder build --mac --win --linux",
        "package:mac": "npm run build && electron-builder build --mac",
        "package:win": "npm run build && electron-builder build --win",
        "package:linux": "npm run build && electron-builder build --linux"
    },
    "dependencies": {
        "get-port": "^5.1.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.7",
        "electron": "^39.2.2",
        "electron-builder": "^25.1.8",
        "typescript": "^5.7.3",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0",
        "cross-env": "^7.0.3"
    },
    "build": {
        "appId": "com.taskmanager.app",
        "productName": "Task Manager",
        "directories": {
            "output": "release",
            "buildResources": "assets"
        },
        "files": [
            "dist/**/*",
            "../backend/dist/**/*",
            "../backend/node_modules/**/*",
            "../app/.next/**/*",
            "../app/out/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "../backend/dist",
                "to": "backend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.productivity",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "assets/icon.png"
        }
    }
}
